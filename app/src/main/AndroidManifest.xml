<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yh.contactmanage" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomAppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ContactInfo"
            android:label="@string/title_activity_contact_info" >
        </activity>
        <activity
            android:name=".Activities.CreateContact"
            android:label="@string/title_activity_create_contact"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".Activities.EditContact"
            android:label="@string/title_activity_edit_contact"
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
    </application>

</manifest>
